@model List<GoldenChicken.Core.Models.StaticContentDetail>
<section class="about-us-slider swiper-container p-relative">
    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
            <div class="swiper-slide slide-item">
                <img src="~/Files/StaticContentImages/Image/@item.Image" class="img-fluid full-width" alt="@item.Title">
                <div class="transform-center">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-12 align-self-center">
                                <div class="right-side-content text-center">
                                    <h1 class="text-custom-white fw-600">@item.Title</h1>
                                    <h3 class="text-custom-white fw-400">@item.ShortDescription</h3>
                                    @if (item.Link != null)
                                    {
                                        <a href="@item.Link" class="btn-second btn-submit">بیشتر بدانید</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="overlay overlay-bg"></div>
            </div>
        }
    </div>
    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</section>
