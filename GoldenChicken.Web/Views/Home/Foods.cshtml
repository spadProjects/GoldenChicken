@model List<GoldenChicken.Core.Models.FoodGallery>
@{
    ViewBag.Title = "غذا ها";
}
<section class="section-padding">
    <div class="container">
        <div class="page-title">
            <h2>غذا های جوجه طلایی</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 p-0">
                    <div class="gallery-box padding-10">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <ul class="gallery-img">

                                            <li class="img-gallery">
                                                <a class="image-popup" href="/Files/FoodImages/@item.Image" title="@item.Title">
                                                    <img src="/Files/FoodImages/@item.Image" class="img-fluid full-width" alt="@item.Title">
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-md-12 certificate">
                                        <h4>@item.Title</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>